{
    "name": "firefox-message-rewriter",
    "version": "1.0.0",
    "description": "A Firefox extension to rewrite messages on websites using ChatGPT.",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "dev": "vite build --watch",
        "build": "vite build",
        "lint": "eslint --ext .ts,.js src",
        "format": "prettier --write \"src/**/*.{ts,js,html,css}\""
    },
    "keywords": [
        "firefox",
        "extension",
        "vite",
        "chatgpt",
        "typescript"
    ],
    "author": "Benjamin Aldrich",
    "license": "MIT",
    "dependencies": {
        "vite": "6.0.1"
    },
    "devDependencies": {
        "eslint": "9.16.0",
        "prettier": "3.4.1",
        "@typescript-eslint/parser": "8.16.0",
        "@typescript-eslint/eslint-plugin": "8.16.0",
        "typescript": "5.7.2"
    }
}